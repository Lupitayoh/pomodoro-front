html
  height 100
html[data-theme="dark"]
  ::selection
    color var(--color-text)
    background-color: #accef7
body
  position absolute
  width 100%
  height 100%
  top 0
  right 0
  bottom 0
  left 0
  font-size: 16
  background-color var(--color-page-bg)
  color var(--color-text)

.hidden
  display none !important


.scroll-x
  overflow-x auto
  -webkit-overflow-scrolling touch

.scroll-y
  overflow-y auto
  -webkit-overflow-scrolling touch


.align-items-center
  align-items center
